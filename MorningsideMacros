Sub M2F()
'
' M2F Macro
'
'
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "Mr"
        .Replacement.Text = "Ms"
        .Forward = True
        .Wrap = wdFindContinue
       .MatchWholeWord = True
   End With
    Selection.Find.Execute Replace:=wdReplaceAll
    With Selection.Find
        .Text = "he"
        .Replacement.Text = "she"
        .Forward = True
        .Wrap = wdFindContinue
        .MatchWholeWord = True
   End With
    Selection.Find.Execute Replace:=wdReplaceAll
    With Selection.Find
        .Text = "him"
        .Replacement.Text = "her"
        .Forward = True
        .Wrap = wdFindContinue
       .MatchWholeWord = True
   End With
    Selection.Find.Execute Replace:=wdReplaceAll
    With Selection.Find
        .Text = "his"
        .Replacement.Text = "her"
        .Forward = True
        .Wrap = wdFindContinue
       .MatchWholeWord = True
   End With
    Selection.Find.Execute Replace:=wdReplaceAll
End Sub


Sub ReplaceFNU()
'
' ReplaceFNU Macro
'
    
    With Selection.Find
        .Text = "FNU "
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = ", FNU"
        .Replacement.Text = ""
        .Forward = False
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceOne
    Selection.Find.ClearFormatting
    
End Sub
Sub ReplaceFirstName()
'
' ReplaceFirstName Macro
'
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "Candidate's First Name:" & vbTab & "FIRSTNAME" & vbCr
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll

    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "Candidate's Last Name:"
        .Replacement.Text = "Candidate's Name"
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "FirstName "
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
        Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = ", FirstName"
        .Replacement.Text = ""
        .Forward = False
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceOne
    Selection.Find.ClearFormatting
    
End Sub

Sub GenericLetter()

    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "provided by Mr. LastName"
        .Replacement.Text = "provided by the company"
        .Forward = False
        .Wrap = wdFindContinue
        .Format = False
        .MatchCase = False
        .MatchWholeWord = False
        .MatchWildcards = False
        .MatchSoundsLike = False
        .MatchAllWordForms = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "represented by Mr. LastName"
        .Replacement.Text = "represented by the company"
        .Forward = False
        .Wrap = wdFindContinue
        .Format = False
        .MatchCase = False
        .MatchWholeWord = False
        .MatchWildcards = False
        .MatchSoundsLike = False
        .MatchAllWordForms = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll

    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = " on behalf of Mr. LastName"
        .Replacement.Text = ""
        .Forward = False
        .Wrap = wdFindContinue
        .Format = False
        .MatchCase = False
        .MatchWholeWord = False
        .MatchWildcards = False
        .MatchSoundsLike = False
        .MatchAllWordForms = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "The skills Mr. LastName possesses"
        .Replacement.Text = "The skills CompanyOne necessitates"
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "Candidate's Last Name:" & vbTab & "LASTNAME" & vbCr
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "LastName "
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "Candidate's First Name:" & vbTab & "FIRSTNAME" & vbCr
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "FirstName "
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
End Sub

Sub PublishPDF()
'
' PublishPDF Macro
'
'
pdfFileName = ActiveDocument.FullName ' get the current file name
lengthFileName = Len(pdfFileName) ' get the length of the current file name (includes the path)
If Right(lengthFileName, 3) = "doc" Then
pdfFileName = Left(pdfFileName, lengthFileName - 3) + "pdf" ' changes the extension (shave off last three characters - DOC - and add three new ones.)
Else: pdfFileName = Left(pdfFileName, lengthFileName - 4) + "pdf" ' changes the extension (shave off last four characters - DOCX - and add three new ones.)
End If
 
ActiveDocument.ExportAsFixedFormat OutputFileName:=pdfFileName, ExportFormat:=wdExportFormatPDF, OpenAfterExport:=True, OptimizeFor:= _
wdExportOptimizeForPrint, Range:=wdExportAllDocument, From:=1, TO:=1, _
Item:=wdExportDocumentContent, IncludeDocProps:=False, KeepIRM:=True, _
CreateBookmarks:=wdExportCreateNoBookmarks, DocStructureTags:=True, _
BitmapMissingFonts:=True, UseISO19005_1:=False

If ActiveDocument.Saved = False Then ActiveDocument.Save

End Sub

Sub ReplaceFNUandPublishPDF()
'
' ReplaceFNUandPublishPDF Macro
'
'
     Call ReplaceFNU
     Call PublishPDF

End Sub

