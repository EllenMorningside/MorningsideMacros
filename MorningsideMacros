''INSERT
Set myRange = ActiveDocument.Content
myRange.Find.Execute FindText:="INSERT", MatchCase:=True, Forward:=True
If myRange.Find.Found = True Then
    Options.DefaultHighlightColorIndex = wdYellow
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    Selection.Find.Replacement.Highlight = True
    With Selection.Find
        .Text = "INSERT"
        .Replacement.Text = "INSERT"
        .Forward = True
        .Wrap = wdFindContinue
        .Format = True
        .MatchCase = True
         x = x + 1
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    End If
    
    If x > 0 Then
    MsgBox ("Check for templated language!")
    
    Else
    
    Selection.Find.ClearFormatting
    Selection.Find.Highlight = True
    Selection.Find.Replacement.ClearFormatting
    Selection.Find.Replacement.Highlight = False
    With Selection.Find
        .Text = ""
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
        .Format = True
        .MatchCase = False
        .MatchWholeWord = False
        .MatchWildcards = False
        .MatchSoundsLike = False
        .MatchAllWordForms = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll

    MsgBox ("All good! Proceed with review.")
    
    End If

    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = ""
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
        .MatchCase = False
        .MatchWholeWord = False
        .MatchAllWordForms = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll

End Sub

Sub JanitorMacro()

     Dim cleanUp(50, 2) As String
     Dim x As Integer

cleanUp(1, 1) = "'": cleanUp(1, 2) = "'"
cleanUp(2, 1) = """": cleanUp(2, 2) = """"
cleanUp(3, 1) = "•" & vbTab: cleanUp(3, 2) = ""
cleanUp(4, 1) = "• ": cleanUp(4, 2) = ""
cleanUp(5, 1) = "-" & vbTab: cleanUp(5, 2) = ""
cleanUp(6, 1) = "o" & vbTab: cleanUp(6, 2) = ""
cleanUp(7, 1) = " ,": cleanUp(7, 2) = ","
cleanUp(8, 1) = "}": cleanUp(8, 2) = ")"
cleanUp(9, 1) = "{": cleanUp(9, 2) = "("
cleanUp(10, 1) = " .": cleanUp(10, 2) = "."
cleanUp(11, 1) = "..": cleanUp(11, 2) = "."
cleanUp(12, 1) = " :": cleanUp(12, 2) = ":"
cleanUp(13, 1) = " / ": cleanUp(13, 2) = "/"
cleanUp(14, 1) = " /": cleanUp(14, 2) = "/"
cleanUp(15, 1) = "/ ": cleanUp(15, 2) = "/"
cleanUp(16, 1) = "\": cleanUp(16, 2) = "/"
cleanUp(17, 1) = "$ ": cleanUp(17, 2) = "$"
cleanUp(18, 1) = ",": cleanUp(18, 2) = ", "
cleanUp(19, 1) = "(": cleanUp(19, 2) = " ("
cleanUp(20, 1) = " ”": cleanUp(20, 2) = "”"
cleanUp(21, 1) = "  ": cleanUp(21, 2) = " "

For x = 1 To 50
 
      Selection.Find.ClearFormatting
     Selection.Find.Replacement.ClearFormatting
     With Selection.Find
         .Text = cleanUp(x, 1)
         .Replacement.Text = cleanUp(x, 2)
         .Forward = True
         .Wrap = wdFindContinue
         .MatchCase = False
         .MatchWholeWord = True
         .MatchAllWordForms = False
     End With
     Selection.Find.Execute Replace:=wdReplaceAll
     Next
    
    ''Cleanup Find and Replace
        Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = ""
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
        .MatchCase = False
        .MatchWholeWord = False
        .MatchAllWordForms = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll

End Sub
