Sub TemplateCheck()

'Declarations
Set myRange = ActiveDocument.Content
Dim x As Integer
x = 0
Dim phrase(200, 2) As String
Dim y As Integer
Dim TemplateErrors(100) As String
Dim ErrorMessage As String
Dim protectedPhrase(5) As String
Dim z As Integer

''Template Check
'Column 1 = Phrase
'Column 2 = MatchCase True or False

''Templated Language
phrase(1, 1) = "FirstName": phrase(1, 2) = "N"
phrase(2, 1) = "LastName": phrase(2, 2) = "N"
phrase(3, 1) = "PositionOne": phrase(3, 2) = "N"
phrase(4, 1) = "CompanyOne": phrase(4, 2) = "N"
phrase(5, 1) = "CaseNumber": phrase(5, 2) = "N"
phrase(6, 1) = "DegreeIn": phrase(6, 2) = "N"
phrase(7, 1) = "FieldOne": phrase(7, 2) = "N"
phrase(8, 1) = "INSERT DATE": phrase(8, 2) = "N"
phrase(9, 1) = "INSERT COMPANY INFORMATION": phrase(9, 2) = "N"
phrase(10, 1) = "INSERT RELEVANT JOB DUTIES HERE": phrase(10, 2) = "N"
phrase(11, 1) = "INSERT RELATED COURSEWORK": phrase(11, 2) = "N"
phrase(12, 1) = "ADD PARAGRAPH": phrase(12, 2) = "N"
phrase(13, 1) = "INCLUDE SOMETHING FROM THE OOH?????": phrase(13, 2) = "N"
phrase(14, 1) = "FIELDTWO": phrase(14, 2) = "N"
phrase(15, 1) = "EXPLAIN HOW…..the degree is relevant……..": phrase(15, 2) = "N"
phrase(16, 1) = "year(S)": phrase(16, 2) = "N"
phrase(17, 1) = "INSERT SIMILAR JOB DUTIES TO THE O*Net DUTIES": phrase(17, 2) = "N"
phrase(18, 1) = "ListCourses": phrase(18, 2) = "N"
phrase(19, 1) = "DegreeTitle": phrase(19, 2) = "N"
phrase(20, 1) = "numberOfYears": phrase(20, 2) = "N"
phrase(21, 1) = "InForeignDegree": phrase(21, 2) = "N"
phrase(22, 1) = "TitleForeignDegree": phrase(22, 2) = "N"
phrase(23, 1) = "MajorThree": phrase(23, 2) = "N"
phrase(24, 1) = "MajorTwo": phrase(24, 2) = "N"
phrase(25, 1) = "MajorOne": phrase(25, 2) = "N"
phrase(26, 1) = "YearThree": phrase(26, 2) = "N"
phrase(27, 1) = "YearTwo": phrase(27, 2) = "N"
phrase(28, 1) = "YearOne": phrase(28, 2) = "N"
phrase(29, 1) = "DegreeReceivedThree": phrase(29, 2) = "N"
phrase(30, 1) = "DegreeReceivedTwo": phrase(30, 2) = "N"
phrase(31, 1) = "DegreeReceivedOne": phrase(31, 2) = "N"
phrase(32, 1) = "DegreeRecievedOne": phrase(32, 2) = "N"
phrase(33, 1) = "theCountryThree": phrase(33, 2) = "N"
phrase(34, 1) = "theCountryTwo": phrase(34, 2) = "N"
phrase(35, 1) = "theCountryOne": phrase(35, 2) = "N"
phrase(36, 1) = "SchoolNameThree": phrase(36, 2) = "N"
phrase(37, 1) = "SchoolNameTwo": phrase(37, 2) = "N"
phrase(38, 1) = "SchoolNameOne": phrase(38, 2) = "N"
phrase(39, 1) = "yearsofCourseworkThree": phrase(39, 2) = "N"
phrase(40, 1) = "yearsofCourseworkTwo": phrase(40, 2) = "N"
phrase(41, 1) = "yearsofCourseworkOne": phrase(41, 2) = "N"
phrase(42, 1) = "SpokenWith": phrase(42, 2) = "N"

''Preposition Mistakes
phrase(43, 1) = "at University of": phrase(43, 2) = "N"
phrase(44, 1) = "at Institute of": phrase(44, 2) = "N"
phrase(45, 1) = "from University of": phrase(45, 2) = "N"
phrase(46, 1) = "from Institute of": phrase(46, 2) = "N"
phrase(47, 1) = "in University of": phrase(47, 2) = "N"
phrase(48, 1) = "in Institute of": phrase(48, 2) = "N"
phrase(49, 1) = "to employ a A": phrase(49, 2) = "N"

''Vowel Mistakes
phrase(50, 1) = "to hire a A": phrase(50, 2) = "N"
phrase(51, 1) = "that a A": phrase(51, 2) = "N"
phrase(52, 1) = "to employ a E": phrase(52, 2) = "N"
phrase(53, 1) = "to hire a E": phrase(53, 2) = "N"
phrase(54, 1) = "that a E": phrase(54, 2) = "N"
phrase(55, 1) = "to employ a I": phrase(55, 2) = "N"
phrase(56, 1) = "to hire a I": phrase(56, 2) = "N"
phrase(57, 1) = "that a I": phrase(57, 2) = "N"
phrase(58, 1) = "to employ a O": phrase(58, 2) = "N"
phrase(59, 1) = "to hire a O": phrase(59, 2) = "N"
phrase(60, 1) = "that a O": phrase(60, 2) = "N"
phrase(61, 1) = "to employ a U": phrase(61, 2) = "N"
phrase(62, 1) = "to hire a U": phrase(62, 2) = "N"
phrase(63, 1) = "that a U": phrase(63, 2) = "N"

''Punctuation and Blank Spots
phrase(64, 1) = "..": phrase(64, 2) = "N"
phrase(65, 1) = "XXX": phrase(65, 2) = "N"
phrase(66, 1) = "INSERT": phrase(66, 2) = "Y"

''First Person Language
phrase(67, 1) = "we": phrase(67, 2) = "N"
phrase(68, 1) = "our": phrase(68, 2) = "N"
phrase(69, 1) = "ours": phrase(69, 2) = "N"
phrase(70, 1) = "us": phrase(70, 2) = "Y"



'Template Prepass to Protect Phrases
protectedPhrase(1) = "we hereby affirm"
protectedPhrase(2) = "Our conversation"
protectedPhrase(3) = "We represent the foregoing"
protectedPhrase(4) = "our knowledge"
protectedPhrase(5) = "us to disbelieve"

For z = 1 To 5

    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = protectedPhrase(z)
        .Replacement.Text = "z" + protectedPhrase(z)
        .Forward = True
        .Wrap = wdFindContinue
        .MatchCase = False
        .MatchWholeWord = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    Next

'Template Check
For y = 1 To 70

    myRange.Find.Execute FindText:=phrase(y, 1), Forward:=True, Wrap:=wdFindContinue, MatchWholeWord:=True, MatchCase:=(phrase(y, 2) = "Y")
    If myRange.Find.Found = True Then
    x = x + 1
    TemplateErrors(x) = phrase(y, 1)
    ErrorMessage = ErrorMessage & TemplateErrors(x) & Chr(13)
    End If
    
    Options.DefaultHighlightColorIndex = wdYellow
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    Selection.Find.Replacement.Highlight = True
    With Selection.Find
        .Text = phrase(y, 1)
        .Replacement.Text = phrase(y, 1)
        .Forward = True
        .Wrap = wdFindContinue
        .Format = True
        .MatchWholeWord = True
        If phrase(y, 2) = "Y" Then
            .MatchCase = True
        Else
            .MatchCase = False
        End If
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    Next

''Message Box
    If x > 0 Then
    MsgBox ("Check for templated language!" & Chr(13) & Chr(13) & "Errors:" & Chr(13) & ErrorMessage)
    
    Else
    Selection.Find.ClearFormatting
    Selection.Find.Highlight = True
    Selection.Find.Replacement.ClearFormatting
    Selection.Find.Replacement.Highlight = False
    With Selection.Find
        .Text = ""
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
        .Format = True
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    
    MsgBox ("All good!")
    
    End If

''PostPass to Restore Template
For z = 1 To 5

    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "z" + protectedPhrase(z)
        .Replacement.Text = protectedPhrase(z)
        .Forward = True
        .Wrap = wdFindContinue
        .MatchCase = False
        .MatchWholeWord = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    Next

''Restore Find and Replace formatting
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = ""
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
        .MatchCase = False
        .MatchWholeWord = False
        .MatchAllWordForms = False
    End With
    Selection.Find.Execute Replace:=wdReplaceAll

End Sub

Sub JanitorMacro()

 Dim cleanUp(50, 2) As String
     Dim x As Integer

cleanUp(1, 1) = "'": cleanUp(1, 2) = "'"
''THIS CANT MATCH WHOLE WORD!!!!!!
cleanUp(2, 1) = """": cleanUp(2, 2) = """"
cleanUp(3, 1) = " Brooklyn, NY 11210": cleanUp(3, 2) = "x Brooklyn, NY 11210"
cleanUp(4, 1) = " FAX 718-951-4842": cleanUp(4, 2) = "x FAX 718-951-4842"
cleanUp(5, 1) = "•" & vbTab: cleanUp(5, 2) = ""
cleanUp(6, 1) = "• ": cleanUp(6, 2) = ""
cleanUp(7, 1) = "x Brooklyn, NY 11210": cleanUp(7, 2) = " Brooklyn, NY 11210"
cleanUp(8, 1) = "x FAX 718-951-4842": cleanUp(8, 2) = " FAX 718-951-4842"
''FIX FONT COLOR ON YANOFSKY TEMPLATE!!!!
cleanUp(9, 1) = "-" & vbTab: cleanUp(9, 2) = ""
cleanUp(10, 1) = "o" & vbTab: cleanUp(10, 2) = ""
cleanUp(11, 1) = " ,": cleanUp(11, 2) = ","
cleanUp(12, 1) = "}": cleanUp(12, 2) = ")"
cleanUp(13, 1) = "{": cleanUp(13, 2) = "("
cleanUp(14, 1) = " .": cleanUp(14, 2) = "."
cleanUp(15, 1) = "..": cleanUp(15, 2) = "."
cleanUp(16, 1) = " :": cleanUp(16, 2) = ":"
cleanUp(17, 1) = " / ": cleanUp(17, 2) = "/"
cleanUp(18, 1) = " /": cleanUp(18, 2) = "/"
cleanUp(19, 1) = "/ ": cleanUp(19, 2) = "/"
cleanUp(20, 1) = "\": cleanUp(20, 2) = "/"
cleanUp(21, 1) = "$ ": cleanUp(21, 2) = "$"
cleanUp(22, 1) = "(": cleanUp(22, 2) = " ("
cleanUp(23, 1) = " ”": cleanUp(23, 2) = "”"
cleanUp(24, 1) = "  ": cleanUp(24, 2) = " "
cleanUp(25, 1) = "": cleanUp(25, 2) = ""

For x = 1 To 50
 
      Selection.Find.ClearFormatting
     Selection.Find.Replacement.ClearFormatting
     With Selection.Find
         .Text = cleanUp(x, 1)
         .Replacement.Text = cleanUp(x, 2)
         .Forward = True
         .Wrap = wdFindContinue
         .MatchCase = False
         .MatchWholeWord = True
         .MatchAllWordForms = False
     End With
     Selection.Find.Execute Replace:=wdReplaceAll
     Next

End Sub
