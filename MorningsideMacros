        .Replacement.Text = "theCountryTwo"
        .Forward = True
        .Wrap = wdFindContinue
        .Format = True
         x = x + 1
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    End If
    
Set myRange = ActiveDocument.Content
myRange.Find.Execute FindText:="thecountryone", Forward:=True
If myRange.Find.Found = True Then
    Options.DefaultHighlightColorIndex = wdYellow
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    Selection.Find.Replacement.Highlight = True
    With Selection.Find
        .Text = "theCountryOne"
        .Replacement.Text = "theCountryOne"
        .Forward = True
        .Wrap = wdFindContinue
        .Format = True
         x = x + 1
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
    End If
    
